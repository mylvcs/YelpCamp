<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">            
                <div class="form-group">
                    <input type="text" class="form-control" name="name" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="price" value="<%= campground.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="image" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="description" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Submit</button>
                </div>            
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>